<UserControl x:Class="SanicBeats.UI.ImportPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SanicBeats.UI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Background="#FF7C4DFF">
    <Grid x:Name="DropablePanel" Margin="0" AllowDrop="True" Drop="OnDrop">
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.9,0.1" MappingMode="RelativeToBoundingBox" StartPoint="0.1,0.9">
                <GradientStop Color="#FFB388FF" Offset="1"/>
                <GradientStop Color="#FF7C4DFF"/>
            </LinearGradientBrush>
        </Grid.Background>
        <TextBlock Margin="10" TextWrapping="Wrap" Text="Drag a sound file here" TextAlignment="Center" Foreground="#7F360000" VerticalAlignment="Center"/>
    </Grid>
</UserControl>
